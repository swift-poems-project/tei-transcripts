              <l n="1" xml:id="spp-875-36L--headnote-1-line-group-1-line-1"><hi rend="italics">Written in the Year</hi> 1729.</l>
            </lg>
          </head>
          <head type="note" n="2" xml:id="spp-875-36L--headnote-2">
            <lg n="1" xml:id="spp-875-36L--headnote-2-line-group-1" type="headnote">
              <l n="1" xml:id="spp-875-36L--headnote-2-line-group-1-line-1"></l>
            </lg>
          </head>
          <head type="note" n="3" xml:id="spp-875-36L--headnote-3">
            <lg n="1" xml:id="spp-875-36L--headnote-3-line-group-1" type="headnote">
              <l n="1" xml:id="spp-875-36L--headnote-3-line-group-1-line-1"></l>
            </lg>
