        <div n="Y01C36L3">
          <head type="note" n="1" xml:id="spp-Y01C36L3-headnote-1">
            <lg n="1" xml:id="spp-Y01C36L3-headnote-1-line-group-1" type="headnote">
              <l n="1" xml:id="spp-Y01C36L3-headnote-1-line-group-1-line-1"><hi rend="italics">By the same Hand</hi>.</l>
            </lg>
          </head>
          <head type="note" n="2" xml:id="spp-Y01C36L3-headnote-2">
            <lg n="1" xml:id="spp-Y01C36L3-headnote-2-line-group-1" type="headnote">
              <l n="1" xml:id="spp-Y01C36L3-headnote-2-line-group-1-line-1"></l>
            </lg>
