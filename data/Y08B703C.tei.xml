          <head type="note" n="1" xml:id="spp-Y08B703C-headnote-1">
            <lg n="1" xml:id="spp-Y08B703C-headnote-1-line-group-1" type="headnote">
              <l n="1" xml:id="spp-Y08B703C-headnote-1-line-group-1-line-1">Quid non mortalia pectora cogis <lb/> Auri sacra Fames.</l>
            </lg>
          </head>
          <head type="note" n="2" xml:id="spp-Y08B703C-headnote-2">
            <lg n="1" xml:id="spp-Y08B703C-headnote-2-line-group-1" type="headnote">
              <l n="1" xml:id="spp-Y08B703C-headnote-2-line-group-1-line-1"></l>
            </lg>
