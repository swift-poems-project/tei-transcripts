          <head type="note" n="1" xml:id="spp-302-49L1-headnote-1">
            <lg n="1" xml:id="spp-302-49L1-headnote-1-line-group-1" type="headnote">
              <l n="1" xml:id="spp-302-49L1-headnote-1-line-group-1-line-1">By Dr. S<hi rend="small-caps">WIFT</hi>.</l>
            </lg>
          </head>
          <head type="note" n="2" xml:id="spp-302-49L1-headnote-2">
            <lg n="1" xml:id="spp-302-49L1-headnote-2-line-group-1" type="headnote">
