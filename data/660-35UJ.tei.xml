          <head type="note" n="1" xml:id="spp-660-35UJ-headnote-1">
            <lg n="1" xml:id="spp-660-35UJ-headnote-1-line-group-1" type="headnote">
              <l n="1" xml:id="spp-660-35UJ-headnote-1-line-group-1-line-1"><hi rend="italics">Whilst I gaze on </hi>Chloe<hi rend="italics"> trembling</hi>.</l>
            </lg>
          </head>
          <head type="note" n="2" xml:id="spp-660-35UJ-headnote-2">
            <lg n="1" xml:id="spp-660-35UJ-headnote-2-line-group-1" type="headnote">
              <l n="1" xml:id="spp-660-35UJ-headnote-2-line-group-1-line-1"></l>
            </lg>
