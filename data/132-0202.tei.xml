          <head type="note" n="1" xml:id="spp-132-0202-headnote-1">
            <lg n="1" xml:id="spp-132-0202-headnote-1-line-group-1" type="headnote">
              <l n="1" xml:id="spp-132-0202-headnote-1-line-group-1-line-1">W<hi rend="small-caps">RITTEN</hi> in the Y<hi rend="small-caps">EAR</hi>, 1712.</l>
            </lg>
          </head>
          <head type="note" n="2" xml:id="spp-132-0202-headnote-2">
            <lg n="1" xml:id="spp-132-0202-headnote-2-line-group-1" type="headnote">
