          <head type="note" n="1" xml:id="spp-170-760L-headnote-1">
            <lg n="1" xml:id="spp-170-760L-headnote-1-line-group-1" type="headnote">
              <l n="1" xml:id="spp-170-760L-headnote-1-line-group-1-line-1">Strenuus et fortis cauisq: Philippus agendis &amp;c&#13;</l>
            </lg>
          </head>
          <head type="note" n="2" xml:id="spp-170-760L-headnote-2">
            <lg n="1" xml:id="spp-170-760L-headnote-2-line-group-1" type="headnote">
              <l n="1" xml:id="spp-170-760L-headnote-2-line-group-1-line-1">By D<hi rend="superscript">r</hi> 08: Swift 1713</l>
            </lg>
