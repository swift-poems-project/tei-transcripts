          <head type="note" n="1" xml:id="spp-170-79L1-headnote-1">
            <lg n="1" xml:id="spp-170-79L1-headnote-1-line-group-1" type="headnote">
              <l n="1" xml:id="spp-170-79L1-headnote-1-line-group-1-line-1">Addressed to the Earl of O<hi rend="small-caps">XFORD</hi>, 1713.</l>
            </lg>
          </head>
          <head type="note" n="2" xml:id="spp-170-79L1-headnote-2">
            <lg n="1" xml:id="spp-170-79L1-headnote-2-line-group-1" type="headnote">
