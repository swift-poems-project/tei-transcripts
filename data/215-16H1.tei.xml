          <head type="note" n="1" xml:id="spp-215-16H1-headnote-1">
            <lg n="1" xml:id="spp-215-16H1-headnote-1-line-group-1" type="headnote">
              <l n="1" xml:id="spp-215-16H1-headnote-1-line-group-1-line-1">Written N<hi rend="small-caps">OVEMBER</hi> 10, <hi rend="small-caps">M DCC XVIII</hi>.</l>
            </lg>
          </head>
          <head type="note" n="2" xml:id="spp-215-16H1-headnote-2">
            <lg n="1" xml:id="spp-215-16H1-headnote-2-line-group-1" type="headnote">
