          <head type="note" n="1" xml:id="spp-233-06E2-headnote-1">
            <lg n="1" xml:id="spp-233-06E2-headnote-1-line-group-1" type="headnote">
              <l n="1" xml:id="spp-233-06E2-headnote-1-line-group-1-line-1">Written in the year 1720.&#13;</l>
            </lg>
          </head>
          <head type="note" n="2" xml:id="spp-233-06E2-headnote-2">
            <lg n="1" xml:id="spp-233-06E2-headnote-2-line-group-1" type="headnote">
              <l n="1" xml:id="spp-233-06E2-headnote-2-line-group-1-line-1"></l>
            </lg>
