          <head type="note" n="1" xml:id="spp-660-140B-headnote-1">
            <lg n="1" xml:id="spp-660-140B-headnote-1-line-group-1" type="headnote">
              <l n="1" xml:id="spp-660-140B-headnote-1-line-group-1-line-1">written in y<hi rend="superscript">e</hi> Year 1733 by Dean Swift</l>
            </lg>
          </head>
          <head type="note" n="2" xml:id="spp-660-140B-headnote-2">
            <lg n="1" xml:id="spp-660-140B-headnote-2-line-group-1" type="headnote">
