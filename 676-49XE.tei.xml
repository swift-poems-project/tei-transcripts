          <head type="note" n="1" xml:id="spp-676-49XE-headnote-1">
            <lg n="1" xml:id="spp-676-49XE-headnote-1-line-group-1" type="headnote">
              <l n="1" xml:id="spp-676-49XE-headnote-1-line-group-1-line-1"><hi rend="italics">In Imitation of</hi> Martial.</l>
            </lg>
          </head>
          <head type="note" n="2" xml:id="spp-676-49XE-headnote-2">
            <lg n="1" xml:id="spp-676-49XE-headnote-2-line-group-1" type="headnote">
              <l n="1" xml:id="spp-676-49XE-headnote-2-line-group-1-line-1"></l>
            </lg>
