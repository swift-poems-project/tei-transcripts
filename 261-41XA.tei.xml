          <head type="note" n="1" xml:id="spp-261-41XA-headnote-1">
            <lg n="1" xml:id="spp-261-41XA-headnote-1-line-group-1" type="headnote">
              <l n="1" xml:id="spp-261-41XA-headnote-1-line-group-1-line-1"><hi rend="italics">On</hi> Dr. S<hi rend="small-caps">WIFT</hi>'s <hi rend="italics">Dinners</hi>, Dean <hi rend="italics">of</hi> St. Patrick.</l>
            </lg>
          </head>
          <head type="note" n="2" xml:id="spp-261-41XA-headnote-2">
            <lg n="1" xml:id="spp-261-41XA-headnote-2-line-group-1" type="headnote">
              <l n="1" xml:id="spp-261-41XA-headnote-2-line-group-1-line-1"></l>
            </lg>
